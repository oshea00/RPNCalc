<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="hp67Background" parent="android:Theme">
      <item name="android:windowBackground">@null</item>
      <item name="android:windowNoTitle">true</item>
    </style>
    <style name="calcButton">
      <item name="android:textSize">20dp</item>
      <item name="android:textColor">#FFFFFF</item>
      <item name="android:background">@drawable/calc_button</item>
    </style>
    <style name="slideButton">
      <item name="android:layout_width">40dp</item>
      <item name="android:layout_height">10dp</item>
      <item name="android:textSize">20dp</item>
      <item name="android:textColor">#FFFFFF</item>
      <item name="android:checked">false</item>
      <item name="android:button">@drawable/slide_button</item>
    </style>
    <style name="calcDisplay">
      <item name="android:layout_width">220dp</item>
      <item name="android:layout_height">25dp</item>
      <item name="android:background">#300000</item>
      <item name="android:textColor">#ff0000</item>
      <item name="android:textSize">20sp</item>
      <item name="android:gravity">left</item>
    </style>
    <style name="calcBtnMed">
      <item name="android:layout_width">30dp</item>
      <item name="android:layout_height">19dp</item>
      <item name="android:background">@drawable/calc_button</item>
    </style>
    <style name="calcBtnLg">
      <item name="android:layout_width">80dp</item>
      <item name="android:layout_height">19dp</item>
      <item name="android:background">@drawable/calc_button</item>
    </style>
    <style name="calcBtnDig">
      <item name="android:layout_width">38dp</item>
      <item name="android:layout_height">19dp</item>
      <item name="android:background">@drawable/calc_button</item>
    </style>
     
</resources>
